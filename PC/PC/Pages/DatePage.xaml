<Page x:Class="PC.Pages.DatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DatePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="223*"/>
            <RowDefinition Height="157*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Таблица сотрудники" Name="users" Click="users_Click"/>
                <Button Content="Таблица оборудования" Name="pc" Click="pc_Click"/>
                <Button Content="Таблица аудитория" Name="audit" Click="audit_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
